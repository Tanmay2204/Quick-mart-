    <script>
        // --- Data & State ---
        let cart = [];
        const trendingItems = [
            { name: "Farm Fresh Eggs", price: 80, oldPrice: 95, icon: "ü•ö", tag: "Hot", qty: "6 pcs" },
            { name: "Fortune Basmati", price: 120, oldPrice: 150, icon: "üçö", tag: "20% Off", qty: "1 kg" },
            { name: "California Almonds", price: 400, oldPrice: 550, icon: "üå∞", tag: "Deal", qty: "250g" },
