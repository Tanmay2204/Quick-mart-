        ];

        // --- Initialization ---
        window.onload = function() {
            renderTrending();
            updateCartUI();
        };

        // --- View Navigation ---
        function switchView(viewId) {
            // 1. Hide all views
            document.querySelectorAll('.view-section').forEach(el => el.classList.add('hidden'));
            
            // 2. Show target view
            document.getElementById(viewId).classList.remove('hidden');
            
            // 3. Reset Scroll
            document.getElementById('main-scroll-area').scrollTop = 0;

            // 4. Update Bottom Nav
            const navItems = document.querySelectorAll('.nav-item');
            navItems.forEach(el => el.classList.remove('active'));
            
            if(viewId === 'view-home') navItems[0].classList.add('active');
            else if(viewId === 'view-monthly') navItems[1].classList.add('active');
            else if(viewId === 'view-cart' || viewId === 'view-payment') navItems[2].classList.add('active');
        }

        // --- Feature: Trending Items ---
        function renderTrending() {
            const container = document.getElementById('trending-container');
            container.innerHTML = '';
            trendingItems.forEach(item => {
                const el = document.createElement('div');
                el.className = "bg-white p-3 rounded-2xl shadow-sm border border-gray-100 relative group active:scale-95 transition-all";
                el.innerHTML = `
                    <span class="absolute top-2 right-2 text-[10px] bg-red-50 text-red-500 font-bold px-1.5 py-0.5 rounded border border-red-100">${item.tag}</span>
                    <div class="text-3xl mb-2 mt-2">${item.icon}</div>
                    <p class="font-bold text-sm text-gray-900 leading-tight">${item.name}</p>
                    <p class="text-[10px] text-gray-400 mb-2">${item.qty}</p>
                    <div class="flex justify-between items-center">
                        <p class="text-xs font-bold text-gray-900">‚Çπ${item.price} <span class="text-gray-300 line-through text-[10px]">‚Çπ${item.oldPrice}</span></p>
                        <button onclick="addToCart('${item.name}', ${item.price})" class="bg-gray-900 text-white text-xs font-bold w-8 h-8 rounded-full flex items-center justify-center shadow-lg active:bg-gray-700 transition-colors">+</button>
                    </div>
                `;
                container.appendChild(el);
            });
        }

        // --- Feature: AI Chef (Search Dish -> Ingredients) ---
        function generateIngredients() {
            const input = document.getElementById('dish-input').value;
            if(!input) return alert("Please enter a dish name first! (e.g. Pasta)");

            // UI State: Loading
            const btnText = document.getElementById('ai-btn-text');
            const spinner = document.getElementById('ai-spinner');
            btnText.innerText = "Analyzing Recipe...";
            spinner.classList.remove('hidden');

            // Mock API Call
            setTimeout(() => {
                btnText.innerText = "ASK AI CHEF";
                spinner.classList.add('hidden');
                
                const mockIngredients = [
                    { name: `Key Ingredient for ${input}`, price: 150, qty: "250g" },
                    { name: "Cooking Butter", price: 55, qty: "100g" },
                    { name: "Organic Spices", price: 30, qty: "1 pack" },
                    { name: "Fresh Cream", price: 75, qty: "250ml" }
                ];

                const container = document.getElementById('ingredients-list');
                container.innerHTML = ''; 

                mockIngredients.forEach(item => {
                    const el = document.createElement('div');
                    el.className = "bg-white p-4 rounded-2xl shadow-sm border border-gray-100 flex justify-between items-center";
                    el.innerHTML = `
                        <div>
                            <p class="font-bold text-gray-800 text-sm">${item.name}</p>
                            <p class="text-[10px] text-gray-500 font-medium">${item.qty} ‚Ä¢ ‚Çπ${item.price}</p>
                        </div>
                        <button onclick="addToCart('${item.name}', ${item.price})" class="bg-green-50 text-green-600 px-4 py-2 rounded-xl text-xs font-bold border border-green-100 hover:bg-green-600 hover:text-white transition-all">+ Add</button>
                    `;
                    container.appendChild(el);
                });

                document.getElementById('result-title').innerText = input;
                document.getElementById('results-area').classList.remove('hidden');
                document.getElementById('results-area').scrollIntoView({ behavior: 'smooth' });
                
            }, 1200);
        }

        // --- Feature: Smart List Parser ---
        function parseList() {
            const text = document.getElementById('smart-input').value;
            if(!text) return alert("Please paste a list first!");
            
            // Simple Parse Logic (Splits by commas or newlines)
            const items = text.split(/,|\n/).map(i => i.trim()).filter(i => i.length > 2);
            
            if(items.length === 0) return alert("Couldn't find valid items.");

            items.forEach(i => {
                // Random price generator for demo
                const price = Math.floor(Math.random() * 100) + 20; 
                addToCart(i, price);
            });
            
            alert(`‚úÖ AI identified ${items.length} items and added them to cart!`);
            switchView('view-cart');
        }

        // --- Feature: Meal Planner ---
        function generateMealPlan() {
            const input = document.getElementById('meal-input').value;
            if(!input) return alert("Please describe your diet preference.");

            // UI Mock
            document.getElementById('meal-plan-form').classList.add('hidden');
            const resultArea = document.getElementById('meal-plan-result');
            resultArea.classList.remove('hidden');
            resultArea.classList.add('fade-in');

            // Mock Items
            const planItems = [
                { name: "Paneer (200g)", price: 105 },
                { name: "Capsicum (500g)", price: 40 },
                { name: "Soya Chunks", price: 55 },
                { name: "Tomatoes (1kg)", price: 30 }
            ];

            const container = document.getElementById('meal-plan-items');
            container.innerHTML = '';
            
            planItems.forEach(item => {
                const el = document.createElement('div');
                el.className = "flex justify-between items-center bg-gray-50 p-3 rounded-xl border border-gray-100";
                el.innerHTML = `
                    <span class="text-sm font-medium text-gray-700">${item.name}</span>
                    <button onclick="addToCart('${item.name}', ${item.price})" class="text-xs font-bold text-green-600">+ Add</button>
                `;
                container.appendChild(el);
            });
        }

        // --- Core: Cart Logic ---
        function addToCart(name, price) {
            cart.push({ name, price });
            updateCartUI();
            
            // Badge Animation
            const badge = document.getElementById('cart-badge');
            badge.classList.add('scale-125');
            setTimeout(() => badge.classList.remove('scale-125'), 200);
        }

        function updateCartUI() {
            const container = document.getElementById('cart-container');
            const totalEl = document.getElementById('cart-total');
            const finalTotalEl = document.getElementById('final-total');
            const badge = document.getElementById('cart-badge');
            const emptyMsg = document.getElementById('empty-cart-msg');
            const footer = document.getElementById('cart-footer');

            // 1. Badge
            badge.innerText = cart.length;
            if(cart.length === 0) badge.classList.add('hidden');
            else badge.classList.remove('hidden');

            // 2. Empty State
            if(cart.length === 0) {
                container.innerHTML = '';
                container.appendChild(emptyMsg);
                emptyMsg.style.display = 'flex';
                footer.classList.add('hidden');
                return;
            }

            // 3. Render Items
            emptyMsg.style.display = 'none';
            footer.classList.remove('hidden');
            container.innerHTML = '';
            
            let total = 0;
            cart.forEach((item, index) => {
                total += item.price;
                const el = document.createElement('div');
                el.className = "bg-white p-4 rounded-2xl border border-gray-100 flex justify-between items-center shadow-sm animate-fade-in";
                el.innerHTML = `
                    <div>
                        <p class="font-bold text-gray-800 text-sm">${item.name}</p>
                        <p class="text-xs text-gray-400">Standard Delivery</p>
                    </div>
                    <div class="flex items-center gap-3">
                        <span class="text-sm text-gray-900 font-bold">‚Çπ${item.price}</span>
                        <button onclick="removeFromCart(${index})" class="text-red-400 font-bold bg-red-50 w-7 h-7 rounded-full flex items-center justify-center hover:bg-red-500 hover:text-white transition-all">√ó</button>
                    </div>
                `;
                container.appendChild(el);
            });
            
            // 4. Totals
            totalEl.innerText = "‚Çπ" + total;
            if(finalTotalEl) finalTotalEl.innerText = "‚Çπ" + total;
        }

        function removeFromCart(index) {
            cart.splice(index, 1);
            updateCartUI();
        }

        // --- Core: Payment ---
        function selectPayment(element) {
            // Remove selection from others
            document.querySelectorAll('.payment-opt').forEach(el => {
                el.classList.remove('border-green-500', 'bg-green-50');
                el.classList.add('border-transparent');
                // Hide checkmark
                if(el.querySelector('.absolute')) el.querySelector('.absolute').remove();
            });

            // Add selection
            element.classList.remove('border-transparent');
            element.classList.add('border-green-500', 'bg-green-50');
            
            // Add checkmark visual
            const check = document.createElement('div');
            check.className = "absolute right-5 w-5 h-5 rounded-full border-2 border-green-500 flex items-center justify-center fade-in";
            check.innerHTML = '<div class="w-2.5 h-2.5 rounded-full bg-green-500"></div>';
            element.appendChild(check);
        }

        function processOrder() {
            const spinner = document.getElementById('pay-spinner');
            spinner.classList.remove('hidden');
            
            setTimeout(() => {
                spinner.classList.add('hidden');
                alert(`üéâ Order Placed Successfully!\n\nTotal: ‚Çπ${cart.reduce((a,b)=>a+b.price, 0)}\nItems: ${cart.length}`);
                cart = [];
                updateCartUI();
                switchView('view-home');
            }, 2000);
        }
    </script>
</body>
</html>